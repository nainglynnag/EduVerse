      // Continue learning buttons
      document.querySelectorAll("button").forEach((button) => {
        if (button.textContent.includes("Continue")) {
          button.addEventListener("click", function (e) {
            e.stopPropagation();
            const courseName =
              this.closest(".bg-gradient-to-r").querySelector("h4").textContent;
            openCourse(courseName);
          });
        }
      });

      // Close modals when clicking outside
      document
        .getElementById("courseModal")
        .addEventListener("click", function (e) {
          if (e.target === this) {
            closeCourse();
          }
        });

      document
        .getElementById("profileModal")
        .addEventListener("click", function (e) {
          if (e.target === this) {
            closeProfile();
          }
        });

      // Button interactions
      document.querySelectorAll("button").forEach((button) => {
        button.addEventListener("click", function () {
          const buttonText = this.textContent.trim();

          if (buttonText.includes("Edit Profile")) {
            alert(
              "Profile editing form would open here. Update your information and preferences."
            );
          } else if (buttonText.includes("Mark Complete")) {
            alert("Lesson marked as complete! Great job on your progress.");
            this.textContent = "Completed ✓";
            this.classList.remove("from-blue-600", "to-indigo-600");
            this.classList.add("bg-green-600");
          } else if (buttonText.includes("Take Notes")) {
            alert(
              "Notes editor would open here. Jot down important points from this lesson."
            );
          } else if (buttonText.includes("Settings")) {
            alert(
              "Settings panel would open here. Customize your learning experience."
            );
          } else if (buttonText.includes("Help & Support")) {
            alert(
              "Help center would open here. Get assistance with your learning journey."
            );
          } else if (buttonText.includes("Sign Out")) {
            if (confirm("Are you sure you want to sign out?")) {
              alert(
                "You have been signed out successfully. See you next time!"
              );
            }
          } else if (buttonText.includes("Enroll in New Course")) {
            alert(
              "Course catalog would open here. Discover new learning opportunities!"
            );
          } else if (buttonText.includes("Download Certificates")) {
            alert(
              "Certificate download would start here. Show off your achievements!"
            );
          } else if (buttonText.includes("Update Profile")) {
            alert(
              "Profile update form would open here. Keep your information current!"
            );
          }
        });
      });

      // Responsive sidebar handling
      window.addEventListener("resize", function () {
        if (window.innerWidth >= 1024) {
          sidebar.classList.remove("-translate-x-full");
          sidebarOverlay.classList.add("hidden");
        } else {
          sidebar.classList.add("-translate-x-full");
        }
      });

      // Initialize sidebar state
      if (window.innerWidth < 1024) {
        sidebar.classList.add("-translate-x-full");
      }
