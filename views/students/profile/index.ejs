<div class="max-w-4xl mx-auto">
  <!-- Profile Header -->
  <div class="bg-white rounded-2xl shadow-lg p-8 mb-6">
    <div class="flex items-center space-x-6">
      <div class="w-24 h-24 bg-gradient-to-r from-blue-600 to-indigo-600 rounded-full flex items-center justify-center text-white text-3xl font-bold">
        <%= student.name ? student.name.split(' ').map(n => n.charAt(0).toUpperCase()).join('').substring(0, 2) : 'ST' %>
      </div>
      <div class="flex-1">
        <h1 class="text-3xl font-bold text-gray-800"><%= student.name || 'Student' %></h1>
        <p class="text-gray-600 text-lg"><%= student.email || 'student@example.com' %></p>
        <div class="flex items-center space-x-4 mt-2">
          <span class="inline-block px-3 py-1 text-sm bg-blue-100 text-blue-800 rounded-full">
            Student
          </span>
          <% if (student.plan) { %>
          <span class="inline-block px-3 py-1 text-sm bg-green-100 text-green-800 rounded-full">
            <%= student.plan %>
          </span>
          <% } %>
          <span class="inline-block px-3 py-1 text-sm bg-gray-100 text-gray-800 rounded-full">
            Student Code: <%= student.student_code || 'N/A' %>
          </span>
        </div>
      </div>
      <div class="text-right">
        <a href="/student/profile/edit" class="bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition-colors">
          Edit Profile
        </a>
      </div>
    </div>
  </div>

  <!-- Profile Information -->
  <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
    <!-- Personal Information -->
    <div class="bg-white rounded-2xl shadow-lg p-6">
      <h2 class="text-xl font-bold text-gray-800 mb-4">Personal Information</h2>
      <div class="space-y-4">
        <div>
          <label class="text-sm font-medium text-gray-600">Full Name</label>
          <p class="text-gray-800"><%= student.name || 'Not provided' %></p>
        </div>
        <div>
          <label class="text-sm font-medium text-gray-600">Email Address</label>
          <p class="text-gray-800"><%= student.email || 'Not provided' %></p>
        </div>
        <div>
          <label class="text-sm font-medium text-gray-600">Student Code</label>
          <p class="text-gray-800"><%= student.student_code || 'Not assigned' %></p>
        </div>
        <div>
          <label class="text-sm font-medium text-gray-600">Status</label>
          <span class="inline-block px-2 py-1 text-xs bg-green-100 text-green-800 rounded-full">
            <%= student.status || 'Active' %>
          </span>
        </div>
        <div>
          <label class="text-sm font-medium text-gray-600">Joined Date</label>
          <p class="text-gray-800"><%= student.joined_date ? new Date(student.joined_date).toLocaleDateString() : 'Not available' %></p>
        </div>
      </div>
    </div>

    <!-- Academic Information -->
    <div class="bg-white rounded-2xl shadow-lg p-6">
      <h2 class="text-xl font-bold text-gray-800 mb-4">Academic Information</h2>
      <div class="space-y-4">
        <div>
          <label class="text-sm font-medium text-gray-600">Current Plan</label>
          <p class="text-gray-800"><%= student.plan || 'No plan assigned' %></p>
        </div>
        <div>
          <label class="text-sm font-medium text-gray-600">Total Courses</label>
          <p class="text-gray-800"><%= student.total_courses || 0 %> enrolled</p>
        </div>
        <div>
          <label class="text-sm font-medium text-gray-600">Progress</label>
          <div class="w-full bg-gray-200 rounded-full h-2">
            <div class="bg-blue-600 h-2 rounded-full" style="width: 0%"></div>
          </div>
          <p class="text-sm text-gray-600 mt-1">0% Complete</p>
        </div>
      </div>
    </div>
  </div>

</div>
