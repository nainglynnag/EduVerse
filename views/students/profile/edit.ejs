<div class="max-w-2xl mx-auto">
  <!-- Edit Profile Form -->
  <div class="bg-white rounded-2xl shadow-lg p-8">
    <div class="flex items-center justify-between mb-6">
      <h1 class="text-2xl font-bold text-gray-800">Edit Profile</h1>
      <a href="/student/profile" class="text-gray-600 hover:text-gray-800">
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M6 18L18 6M6 6l12 12"/>
        </svg>
      </a>
    </div>

    <!-- Flash Messages -->
    <% if (typeof error !== 'undefined' && error.length > 0) { %>
    <div class="mb-6 p-4 bg-red-50 border border-red-200 rounded-lg">
      <div class="flex">
        <svg class="w-5 h-5 text-red-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd"/>
        </svg>
        <div class="ml-3">
          <p class="text-sm text-red-800"><%= error %></p>
        </div>
      </div>
    </div>
    <% } %>

    <% if (typeof success !== 'undefined' && success.length > 0) { %>
    <div class="mb-6 p-4 bg-green-50 border border-green-200 rounded-lg">
      <div class="flex">
        <svg class="w-5 h-5 text-green-400" fill="currentColor" viewBox="0 0 20 20">
          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"/>
        </svg>
        <div class="ml-3">
          <p class="text-sm text-green-800"><%= success %></p>
        </div>
      </div>
    </div>
    <% } %>

    <form action="/student/profile/edit" method="POST" class="space-y-6">
      <!-- Personal Information -->
      <div class="space-y-4">
        <h2 class="text-lg font-semibold text-gray-800">Personal Information</h2>
        
        <div>
          <label for="name" class="block text-sm font-medium text-gray-700 mb-2">Full Name</label>
          <input
            type="text"
            id="name"
            name="name"
            value="<%= (student && student.name) ? student.name : '' %>"
            required
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            placeholder="Enter your full name"
          />
        </div>

        <div>
          <label for="email" class="block text-sm font-medium text-gray-700 mb-2">Email Address</label>
          <input
            type="email"
            id="email"
            name="email"
            value="<%= (student && student.email) ? student.email : '' %>"
            required
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
            placeholder="Enter your email address"
          />
        </div>
      </div>

      <!-- Academic Information -->
      <div class="space-y-4">
        <h2 class="text-lg font-semibold text-gray-800">Academic Information</h2>
        
        <div>
          <label for="plan_id" class="block text-sm font-medium text-gray-700 mb-2">Student Plan</label>
          <select
            id="plan_id"
            name="plan_id"
            class="w-full px-4 py-3 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
          >
            <option value="">Select a plan</option>
            <option value="1" <%= (student && student.plan_id == 1) ? 'selected' : '' %>>Basic Plan</option>
            <option value="2" <%= (student && student.plan_id == 2) ? 'selected' : '' %>>Premium Plan</option>
            <option value="3" <%= (student && student.plan_id == 3) ? 'selected' : '' %>>Pro Plan</option>
          </select>
        </div>
      </div>

      <!-- Form Actions -->
      <div class="flex items-center justify-end space-x-4 pt-6 border-t border-gray-200">
        <a
          href="/student/profile"
          class="px-6 py-3 text-gray-700 bg-gray-100 rounded-lg hover:bg-gray-200 transition-colors"
        >
          Cancel
        </a>
        <button
          type="submit"
          class="px-6 py-3 bg-blue-600 text-white rounded-lg hover:bg-blue-700 transition-colors"
        >
          Save Changes
        </button>
      </div>
    </form>
  </div>

  <!-- Current Profile Info -->
  <div class="bg-white rounded-2xl shadow-lg p-6 mt-6">
    <h2 class="text-lg font-semibold text-gray-800 mb-4">Current Profile</h2>
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <label class="text-sm font-medium text-gray-600">Student Code</label>
        <p class="text-gray-800"><%= (student && student.student_code) ? student.student_code : 'Not assigned' %></p>
      </div>
      <div>
        <label class="text-sm font-medium text-gray-600">Status</label>
        <span class="inline-block px-2 py-1 text-xs bg-green-100 text-green-800 rounded-full">
          <%= (student && student.status) ? student.status : 'Active' %>
        </span>
      </div>
      <div>
        <label class="text-sm font-medium text-gray-600">Joined Date</label>
        <p class="text-gray-800"><%= (student && student.joined_date) ? new Date(student.joined_date).toLocaleDateString() : 'Not available' %></p>
      </div>
      <div>
        <label class="text-sm font-medium text-gray-600">Total Courses</label>
        <p class="text-gray-800"><%= (student && student.total_courses) ? student.total_courses : 0 %> enrolled</p>
      </div>
    </div>
  </div>
</div>
