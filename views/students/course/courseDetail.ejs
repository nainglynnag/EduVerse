<div class="bg-white rounded-lg shadow-sm">
  <!-- Course Header -->
  <div class="bg-gradient-to-r from-blue-600 to-indigo-600 text-white p-6 rounded-t-lg">
    <div class="flex items-center justify-between">
      <div>
        <h1 class="text-2xl font-bold mb-2"><%= course.title %></h1>
        <p class="text-blue-100"><%= course.description %></p>
      </div>
      <div class="text-right">
        <div class="text-2xl font-bold">
          <% if (course.price > 0) { %>$<%= course.price %><% } else { %>Free<% } %>
        </div>
        <div class="text-sm text-blue-100">
          <%= course.category_name || 'Uncategorized' %>
        </div>
      </div>
    </div>
  </div>

  <!-- Course Content -->
  <div class="p-6">
    <!-- Course Info Grid -->
    <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-6">
      <div class="bg-gray-50 p-4 rounded-lg">
        <div class="text-sm text-gray-600 mb-1">Instructor</div>
        <div class="font-medium text-gray-900">
          <% if (course.instructor_name) { %>
            <a href="/student/instructor/<%= course.instructor_id %>" class="text-blue-600 hover:text-blue-800">
              <%= course.instructor_name %>
            </a>
          <% } else { %>
            Not Assigned
          <% } %>
        </div>
      </div>
      
      <div class="bg-gray-50 p-4 rounded-lg">
        <div class="text-sm text-gray-600 mb-1">Students</div>
        <div class="font-medium text-gray-900"><%= course.total_students || 0 %> enrolled</div>
      </div>
      
      <div class="bg-gray-50 p-4 rounded-lg">
        <div class="text-sm text-gray-600 mb-1">Duration</div>
        <div class="font-medium text-gray-900">
          <% 
            let totalDuration = 0;
            if (course.lessons && course.lessons.length > 0) {
              course.lessons.forEach(lesson => {
                if (lesson.duration_mins) {
                  totalDuration += Number(lesson.duration_mins);
                }
              });
            }
          %>
          <%= (Number(totalDuration)/60).toFixed(1) %> hours
        </div>
      </div>
    </div>

    <!-- Learning Progress Section (if enrolled) -->
    <% if (course.is_enrolled) { %>
      <div class="mb-6">
        <div class="bg-gradient-to-r from-blue-50 to-indigo-50 rounded-xl p-6 border border-blue-100">
          <div class="flex items-center mb-4">
            <div class="w-10 h-10 bg-gradient-to-r from-blue-500 to-indigo-600 rounded-xl flex items-center justify-center mr-3">
              <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
              </svg>
            </div>
            <h3 class="text-xl font-bold text-gray-800">Your Learning Progress</h3>
          </div>
          
          <div class="grid grid-cols-1 md:grid-cols-3 gap-4 mb-4">
            <!-- Progress Percentage -->
            <div class="text-center">
              <div class="text-3xl font-bold text-blue-600 mb-1">
                <%= Math.round(course.progress_percent || 0) %>%
              </div>
              <div class="text-sm text-gray-600">Overall Progress</div>
            </div>
            
            <!-- Completed Lessons -->
            <div class="text-center">
              <div class="text-3xl font-bold text-green-600 mb-1">
                <%= course.completed_lessons || 0 %>
              </div>
              <div class="text-sm text-gray-600">Lessons Completed</div>
            </div>
            
            <!-- Total Lessons -->
            <div class="text-center">
              <div class="text-3xl font-bold text-gray-600 mb-1">
                <%= course.total_lessons || 0 %>
              </div>
              <div class="text-sm text-gray-600">Total Lessons</div>
            </div>
          </div>
          
          <!-- Progress Bar -->
          <div class="mb-4">
            <div class="flex items-center justify-between mb-2">
              <span class="text-sm font-medium text-gray-700">Course Completion</span>
              <span class="text-sm font-semibold text-blue-600">
                <%= Math.round(course.progress_percent || 0) %>%
              </span>
            </div>
            <div class="w-full bg-gray-200 rounded-full h-3 overflow-hidden">
              <div
                class="bg-gradient-to-r from-blue-500 to-indigo-500 h-3 rounded-full transition-all duration-500 ease-out"
                style="width: <%= Math.round(course.progress_percent || 0) %>%"
              ></div>
            </div>
          </div>
          
          <!-- Progress Status -->
          <div class="flex items-center justify-between">
            <div class="flex items-center space-x-2">
              <% if (course.progress_percent >= 100) { %>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
                  <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                  </svg>
                  Course Completed
                </span>
              <% } else if (course.progress_percent > 0) { %>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
                  <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
                  </svg>
                  In Progress
                </span>
              <% } else { %>
                <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-gray-100 text-gray-800">
                  <svg class="w-4 h-4 mr-1" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
                  </svg>
                  Not Started
                </span>
              <% } %>
            </div>
            
            <% if (course.progress_percent < 100) { %>
              <button onclick="window.location.href='/student/course/<%= course.id %>/learn'"
                class="bg-gradient-to-r from-blue-500 to-indigo-600 text-white px-4 py-2 rounded-lg hover:from-blue-600 hover:to-indigo-700 transition-all duration-200 text-sm font-medium">
                Continue Learning
              </button>
            <% } else { %>
              <button onclick="window.location.href='/student/course/<%= course.id %>/learn'"
                class="bg-gradient-to-r from-green-500 to-emerald-600 text-white px-4 py-2 rounded-lg hover:from-green-600 hover:to-emerald-700 transition-all duration-200 text-sm font-medium">
                Review Course
              </button>
            <% } %>
          </div>
        </div>
      </div>
    <% } %>

    <!-- Lessons Section -->
    <!-- DEBUG: Checking lessons -->
    <!-- Course object: <%= JSON.stringify(course, null, 2) %> -->
    <!-- Lessons: <%= course.lessons ? course.lessons.length : 'undefined' %> -->
    <% if (course.lessons && course.lessons.length > 0) { %>
      <div class="mb-6">
        <div class="flex items-center justify-between mb-4">
          <h3 class="text-lg font-semibold text-gray-800">Course Lessons</h3>
          <div class="text-sm text-gray-600">
            <%= course.lessons.length %> lessons â€¢ 
            <% 
              let totalDuration = 0;
              course.lessons.forEach(lesson => {
                if (lesson.duration_mins) {
                  totalDuration += Number(lesson.duration_mins);
                }
              });
            %>
            <%= (Number(totalDuration)/60).toFixed(1) %> hours total
          </div>
        </div>
        <div class="space-y-3">
          <% course.lessons.forEach((lesson, index) => { %>
            <div class="flex items-center justify-between p-4 bg-white border border-gray-200 rounded-lg hover:border-blue-300 hover:shadow-md transition-all duration-200">
              <div class="flex items-center space-x-4">
                <div class="w-10 h-10 bg-gradient-to-r from-blue-500 to-indigo-600 text-white rounded-full flex items-center justify-center text-sm font-bold">
                  <%= lesson.lesson_no %>
                </div>
                <div class="flex-1">
                  <div class="font-semibold text-gray-900 text-base"><%= lesson.title %></div>
                  <% if (lesson.description) { %>
                    <div class="text-sm text-gray-600 mt-1"><%= lesson.description %></div>
                  <% } %>
                  <div class="flex items-center space-x-4 mt-2">
                    <div class="flex items-center space-x-1 text-xs text-gray-500">
                      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
                      </svg>
                      <span><%= lesson.duration_mins || 'N/A' %> mins</span>
                    </div>
                    <div class="flex items-center space-x-1 text-xs text-gray-500">
                      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"/>
                      </svg>
                      <span>Lesson <%= lesson.lesson_no %></span>
                    </div>
                  </div>
                </div>
              </div>
              <div class="flex items-center space-x-2">
                <% if (course.is_enrolled) { %>
                  <button class="px-4 py-2 bg-blue-600 text-white text-sm font-medium rounded-lg hover:bg-blue-700 transition-colors">
                    Start Lesson
                  </button>
                <% } else { %>
                  <div class="text-sm text-gray-400">
                    Enroll to access
                  </div>
                <% } %>
              </div>
            </div>
          <% }) %>
        </div>
      </div>
    <% } else { %>
      <div class="mb-6">
        <div class="bg-yellow-50 border border-yellow-200 rounded-lg p-4">
          <div class="flex items-center space-x-2">
            <svg class="w-5 h-5 text-yellow-600" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"/>
            </svg>
            <span class="text-yellow-800 font-medium">No lessons available yet</span>
          </div>
          <p class="text-yellow-700 text-sm mt-1">This course doesn't have any lessons yet. Check back later!</p>
        </div>
      </div>
    <% } %>

    <!-- Learning Objectives -->
    <% if (course.objectives && course.objectives.trim().length > 0) { %>
      <div class="mb-6">
        <h3 class="text-lg font-semibold text-gray-800 mb-3">What You'll Learn</h3>
        <ul class="space-y-2">
          <% course.objectives.split(' | ').forEach(objective => { %>
            <% if (objective.trim()) { %>
              <li class="flex items-start space-x-2">
                <svg class="w-5 h-5 text-green-500 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
                <span class="text-gray-700"><%= objective.trim() %></span>
              </li>
            <% } %>
          <% }) %>
        </ul>
      </div>
    <% } %>

    <!-- Prerequisites -->
    <% if (course.prerequisites && course.prerequisites.trim().length > 1) { %>
      <div class="mb-6">
        <h3 class="text-lg font-semibold text-gray-800 mb-3">Prerequisites</h3>
        <ul class="space-y-1">
          <% course.prerequisites.split(' | ').forEach(prerequisite => { %>
            <% if (prerequisite.trim()) { %>
              <li class="flex items-start space-x-2">
                <svg class="w-5 h-5 text-blue-500 mt-0.5 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M18 10a8 8 0 11-16 0 8 8 0 0116 0zm-7-4a1 1 0 11-2 0 1 1 0 012 0zM9 9a1 1 0 000 2v3a1 1 0 001 1h1a1 1 0 100-2v-3a1 1 0 00-1-1H9z" clip-rule="evenodd"/>
                </svg>
                <span class="text-gray-700"><%= prerequisite.trim() %></span>
              </li>
            <% } %>
          <% }) %>
        </ul>
      </div>
    <% } %>

    <!-- Action Buttons -->
    <!-- DEBUG: Enrollment status -->
    <!-- Is enrolled: <%= course.is_enrolled %> -->
    <!-- Course status: <%= course.status %> -->
    <div class="flex flex-col sm:flex-row gap-3 pt-6 border-t border-gray-200">
      <button onclick="window.location.href='/student/courses'"
        class="bg-gray-100 text-gray-700 px-6 py-3 rounded-lg hover:bg-gray-200 transition-colors font-medium">
        Back to Courses
      </button>
      <% if (course.is_enrolled) { %>
        <button onclick="window.location.href='/student/course/<%= course.id %>/learn'"
          class="ml-auto bg-gradient-to-r from-blue-500 to-indigo-600 text-white px-6 py-3 rounded-lg hover:from-blue-600 hover:to-indigo-700 transition-all duration-300 font-medium text-base shadow-md hover:shadow-lg transform hover:scale-105">
          Continue Learning
        </button>
      <% } else { %>
        <% if (course.status === 'published') { %>
          <button class="ml-auto bg-blue-600 text-white px-6 py-3 rounded-lg hover:bg-blue-700 transition-colors font-medium enroll-btn"
            data-course-id="<%= course.id %>">
            Enroll in Course
          </button>
        <% } else { %>
          <button class="ml-auto bg-gray-400 text-white px-6 py-3 rounded-lg cursor-not-allowed font-medium" disabled>
            Course Not Available (Draft)
          </button>
        <% } %>
      <% } %>
    </div>
  </div>
</div>

<script>
  // Function to enroll in course using ES6 arrow function
  const enrollInCourse = async (courseId) => {
    if (confirm('Are you sure you want to enroll in this course?')) {
      try {
        const response = await fetch(`/student/course/${courseId}/enroll`, {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json',
          },
        });
        
        const data = await response.json();
        
        if (data.success) {
          alert('Successfully enrolled in the course!');
          location.reload();
        } else {
          alert(`Error enrolling in course: ${data.message || 'Unknown error'}`);
        }
      } catch (error) {
        console.error('Error:', error);
        alert('Error enrolling in course. Please try again.');
      }
    }
  };

  document.addEventListener("DOMContentLoaded", () => {
    // Event delegation for enroll button
    document.addEventListener("click", (e) => {
      if (e.target.classList.contains("enroll-btn")) {
        const courseId = e.target.getAttribute("data-course-id");
        enrollInCourse(courseId);
      }
    });
  });
</script>