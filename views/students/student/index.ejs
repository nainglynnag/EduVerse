<!-- Student-facing Students List (for admin-styled management in student area) -->
<div id="studentUsersFragment">
  <div class="flex items-center justify-between mb-6">
    <h2 class="text-2xl font-bold text-gray-800">Students
      <span class="text-lg text-blue-600">(<%= totalStudents || 0 %>)</span>
    </h2>
    <a href="/students/students/create" class="bg-gradient-to-r from-red-600 to-orange-600 text-white px-3 md:px-6 py-2 rounded-lg">Add New Student</a>
  </div>

  <% if (students && students.length > 0) { %>
  <div class="bg-white rounded-lg shadow-sm overflow-hidden">
    <div class="overflow-x-auto">
      <table class="w-full">
        <thead class="bg-gray-50">
          <tr>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500">#</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500">Name</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500">Email</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500">Joined</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500">Status</th>
            <th class="px-6 py-3 text-left text-xs font-medium text-gray-500">Actions</th>
          </tr>
        </thead>
        <tbody class="bg-white divide-y divide-gray-200">
          <% students.forEach((student, idx) => { %>
          <tr>
            <td class="px-6 py-4 text-sm text-gray-900"><%= idx + 1 %></td>
            <td class="px-6 py-4 text-sm text-gray-900"><%= student.name %></td>
            <td class="px-6 py-4 text-sm text-gray-900"><%= student.email %></td>
            <td class="px-6 py-4 text-sm text-gray-900"><%= student.joined_date?.toLocaleDateString ? student.joined_date.toLocaleDateString() : student.joined_date %></td>
            <td class="px-6 py-4 text-sm text-gray-900"><%= student.status || 'active' %></td>
            <td class="px-6 py-4 text-sm text-gray-900">
              <a href="/students/students/<%= student.id %>" class="text-blue-600">View</a>
              <a href="/students/students/edit/<%= student.id %>" class="ml-3 text-indigo-600">Edit</a>
            </td>
          </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
  <% } else { %>
  <div class="bg-white rounded-2xl p-8 shadow-lg text-center">
    <p class="text-gray-600">No students found.</p>
  </div>
  <% } %>
</div>
