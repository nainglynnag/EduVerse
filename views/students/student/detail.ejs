<div class="bg-white rounded-2xl p-6 shadow-lg">
  <h2 class="text-2xl font-bold mb-2"><%= student.name %></h2>
  <p class="text-sm text-gray-600 mb-4"><%= student.email %></p>
  <div class="space-y-2">
    <div><strong>Plan:</strong> <%= student.plan %></div>
    <div><strong>Joined:</strong> <%= student.joined_date?.toLocaleDateString ? student.joined_date.toLocaleDateString() : student.joined_date %></div>
  </div>
  <div class="mt-4">
    <a href="/students/students" class="px-4 py-2 bg-blue-50 text-blue-600 rounded-lg">Back to Students</a>
  </div>
</div>
