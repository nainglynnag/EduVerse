<script>
  function duplicateCourse(courseId) {
    if (confirm('Are you sure you want to duplicate this course?')) {
      // TODO: Implement course duplication
      alert('Course duplication feature coming soon!');
    }
  }

  function deleteCourse(courseId, courseTitle) {
    if (confirm(`Are you sure you want to delete the course "${courseTitle}"? This action cannot be undone.`)) {
      fetch(`/instructor/courses/${courseId}`, {
        method: 'DELETE',
        headers: {
          'Content-Type': 'application/json'
        }
      })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
          alert('Course deleted successfully!');
          window.location.href = '/instructor/courses';
        } else {
          alert('Error deleting course: ' + data.message);
        }
      })
      .catch(error => {
        console.error('Error deleting course:', error);
        alert('Error deleting course. Please try again.');
      });
    }
  }

  function editLesson(lessonId) {
    // Redirect to the course edit page with lesson focus
    window.location.href = `/instructor/courses/<%= course.id %>/edit#lesson-${lessonId}`;
  }

  function deleteLesson(lessonId, lessonTitle) {
    if (confirm(`Are you sure you want to delete the lesson "${lessonTitle}"? This action cannot be undone.`)) {
      fetch(`/instructor/courses/<%= course.id %>/lessons/${lessonId}`, {
        method: 'DELETE',
        headers: {
          'Content-Type': 'application/json'
        }
      })
      .then(response => response.json())
      .then(data => {
        if (data.success) {
          alert('Lesson deleted successfully!');
          window.location.reload();
        } else {
          alert('Error deleting lesson: ' + data.message);
        }
      })
      .catch(error => {
        console.error('Error deleting lesson:', error);
        alert('Error deleting lesson. Please try again.');
      });
    }
  }
</script>
