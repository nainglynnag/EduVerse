<!-- Course Detail Content -->
<div id="courseDetailContent">
  <!-- Enhanced Header -->
  <div class="mb-8">
    <div class="bg-gradient-to-r from-purple-600 via-pink-500 to-indigo-600 rounded-3xl p-8 text-white relative overflow-hidden">
      <!-- Background Pattern -->
      <div class="absolute inset-0 opacity-10">
        <svg class="w-full h-full" viewBox="0 0 100 100" fill="currentColor">
          <circle cx="20" cy="20" r="2"/>
          <circle cx="80" cy="20" r="2"/>
          <circle cx="20" cy="80" r="2"/>
          <circle cx="80" cy="80" r="2"/>
          <circle cx="50" cy="50" r="1"/>
        </svg>
      </div>
      
      <div class="relative z-10">
        <div class="flex items-start justify-between">
          <div class="flex-1">
            <h1 class="text-3xl font-bold mb-2"><%= course.title %></h1>
            <div class="flex items-center space-x-4 mb-4">
              <span class="inline-flex items-center px-4 py-2 rounded-full text-sm font-semibold backdrop-blur-sm <%= course.status === 'published' ? 'bg-green-500/90 text-white' : 'bg-yellow-500/90 text-white' %>">
                <%= course.status === 'published' ? 'Published' : 'Draft' %>
              </span>
              <div class="flex items-center space-x-2 text-white/80">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                </svg>
                <span class="text-sm"><%= course.category_name || 'Uncategorized' %></span>
              </div>
              <div class="flex items-center space-x-2 text-white/80">
                <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
                </svg>
                <span class="text-sm">Created <%= new Date(course.created_at).toLocaleDateString() %></span>
              </div>
            </div>
            <p class="text-white/90 text-lg leading-relaxed max-w-3xl">
              <%= course.description || 'No description available' %>
            </p>
          </div>
          
          <div class="flex flex-col space-y-3 ml-8">
            <a href="/instructor/courses/<%= course.id %>/edit" class="bg-white/20 backdrop-blur-sm text-white px-6 py-3 rounded-xl hover:bg-white/30 transition-all duration-200 font-medium text-center border border-white/30">
              Edit Course
            </a>
            <a href="/instructor/courses" class="bg-white text-purple-600 px-6 py-3 rounded-xl hover:bg-gray-50 transition-all duration-200 font-medium text-center">
              Back to Courses
            </a>
          </div>
        </div>
      </div>
    </div>
  </div>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <!-- Main Content -->
    <div class="lg:col-span-2 space-y-8">
      <!-- Course Description -->
      <div class="bg-white rounded-2xl p-6 shadow-lg">
        <h3 class="text-xl font-bold text-gray-800 mb-4">Course Description</h3>
        <p class="text-gray-600 leading-relaxed"><%= course.description || 'No description available' %></p>
      </div>

      <!-- Enhanced Course Information -->
      <div class="bg-white rounded-3xl p-8 shadow-xl border border-gray-100">
        <h3 class="text-2xl font-bold text-gray-800 mb-6 flex items-center">
          <div class="w-8 h-8 bg-gradient-to-r from-purple-500 to-pink-500 rounded-lg flex items-center justify-center mr-3">
            <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M3 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1zm0 4a1 1 0 011-1h12a1 1 0 110 2H4a1 1 0 01-1-1z" clip-rule="evenodd"/>
            </svg>
          </div>
          Course Information
        </h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <div class="bg-gradient-to-br from-purple-50 to-pink-50 rounded-2xl p-6 border border-purple-100">
            <div class="flex items-center space-x-3 mb-3">
              <div class="w-10 h-10 bg-purple-100 rounded-xl flex items-center justify-center">
                <svg class="w-5 h-5 text-purple-600" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                </svg>
              </div>
              <h4 class="font-semibold text-gray-800">Category</h4>
            </div>
            <p class="text-gray-600 text-lg"><%= course.category_name || 'Uncategorized' %></p>
          </div>
          
          <div class="bg-gradient-to-br from-blue-50 to-indigo-50 rounded-2xl p-6 border border-blue-100">
            <div class="flex items-center space-x-3 mb-3">
              <div class="w-10 h-10 bg-blue-100 rounded-xl flex items-center justify-center">
                <svg class="w-5 h-5 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                </svg>
              </div>
              <h4 class="font-semibold text-gray-800">Difficulty Level</h4>
            </div>
            <p class="text-gray-600 text-lg"><%= course.difficulty_name || 'Unknown' %></p>
          </div>
          
          <div class="bg-gradient-to-br from-green-50 to-emerald-50 rounded-2xl p-6 border border-green-100">
            <div class="flex items-center space-x-3 mb-3">
              <div class="w-10 h-10 bg-green-100 rounded-xl flex items-center justify-center">
                <svg class="w-5 h-5 text-green-600" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M8.433 7.418c.155-.103.346-.196.567-.267v1.698a2.305 2.305 0 01-.567-.267C8.07 8.34 8 8.114 8 8c0-.114.07-.34.433-.582zM11 12.849v-1.698c.22.071.412.164.567.267.364.243.433.468.433.582 0 .114-.07.34-.433.582a2.305 2.305 0 01-.567.267z"/>
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-13a1 1 0 10-2 0v.092a4.535 4.535 0 00-1.676.662C6.602 6.234 6 7.009 6 8c0 .99.602 1.765 1.324 2.246.48.32 1.054.545 1.676.662v1.941c-.391-.127-.68-.317-.843-.504a1 1 0 10-1.51 1.31c.562.649 1.413 1.076 2.353 1.253V15a1 1 0 102 0v-.092a4.535 4.535 0 001.676-.662C13.398 13.766 14 12.991 14 12c0-.99-.602-1.765-1.324-2.246A4.535 4.535 0 0011 9.092V7.151c.391.127.68.317.843.504a1 1 0 101.511-1.31c-.563-.649-1.413-1.076-2.354-1.253V5z" clip-rule="evenodd"/>
                </svg>
              </div>
              <h4 class="font-semibold text-gray-800">Price</h4>
            </div>
            <p class="text-gray-600 text-2xl font-bold">$<%= course.price || 0 %></p>
          </div>
          
          <div class="bg-gradient-to-br from-orange-50 to-yellow-50 rounded-2xl p-6 border border-orange-100">
            <div class="flex items-center space-x-3 mb-3">
              <div class="w-10 h-10 bg-orange-100 rounded-xl flex items-center justify-center">
                <svg class="w-5 h-5 text-orange-600" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
                </svg>
              </div>
              <h4 class="font-semibold text-gray-800">Created</h4>
            </div>
            <p class="text-gray-600 text-lg"><%= new Date(course.created_at).toLocaleDateString() %></p>
          </div>
        </div>
      </div>

      <!-- Enhanced Learning Objectives -->
      <% if (objectives && objectives.length > 0) { %>
      <div class="bg-white rounded-3xl p-8 shadow-xl border border-gray-100">
        <h3 class="text-2xl font-bold text-gray-800 mb-6 flex items-center">
          <div class="w-8 h-8 bg-gradient-to-r from-purple-500 to-pink-500 rounded-lg flex items-center justify-center mr-3">
            <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
            </svg>
          </div>
          Learning Objectives
        </h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <% objectives.forEach((objective, index) => { %>
          <div class="bg-gradient-to-br from-purple-50 to-pink-50 rounded-2xl p-6 border border-purple-100 hover:shadow-md transition-shadow">
            <div class="flex items-start space-x-4">
              <div class="w-8 h-8 bg-purple-500 rounded-full flex items-center justify-center flex-shrink-0 mt-1">
                <span class="text-white font-bold text-sm"><%= index + 1 %></span>
              </div>
              <p class="text-gray-700 leading-relaxed"><%= objective.objective %></p>
            </div>
          </div>
          <% }); %>
        </div>
      </div>
      <% } %>

      <!-- Enhanced Course Prerequisites -->
      <% if (prerequisites && prerequisites.length > 0) { %>
      <div class="bg-white rounded-3xl p-8 shadow-xl border border-gray-100">
        <h3 class="text-2xl font-bold text-gray-800 mb-6 flex items-center">
          <div class="w-8 h-8 bg-gradient-to-r from-orange-500 to-yellow-500 rounded-lg flex items-center justify-center mr-3">
            <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
            </svg>
          </div>
          Prerequisites
        </h3>
        <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
          <% prerequisites.forEach((prerequisite, index) => { %>
          <div class="bg-gradient-to-br from-orange-50 to-yellow-50 rounded-2xl p-6 border border-orange-100 hover:shadow-md transition-shadow">
            <div class="flex items-start space-x-4">
              <div class="w-8 h-8 bg-orange-500 rounded-full flex items-center justify-center flex-shrink-0 mt-1">
                <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                  <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd"/>
                </svg>
              </div>
              <p class="text-gray-700 leading-relaxed"><%= prerequisite.prerequisite %></p>
            </div>
          </div>
          <% }); %>
        </div>
      </div>
      <% } %>

      <!-- Enhanced Course Lessons -->
      <% if (lessons && lessons.length > 0) { %>
      <div class="bg-white rounded-3xl p-8 shadow-xl border border-gray-100">
        <div class="flex items-center justify-between mb-6">
          <h3 class="text-2xl font-bold text-gray-800 flex items-center">
            <div class="w-8 h-8 bg-gradient-to-r from-purple-500 to-pink-500 rounded-lg flex items-center justify-center mr-3">
              <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                <path d="M10.394 2.08a1 1 0 00-.788 0l-7 3a1 1 0 000 1.84L5.25 8.051a.999.999 0 01.356-.257l4-1.714a1 1 0 11.788 1.838L7.667 9.088l1.94.831a1 1 0 00.787 0l7-3a1 1 0 000-1.838l-7-3zM3.31 9.397L5 10.12v4.102a8.969 8.969 0 00-1.05-.174 1 1 0 01-.89-.89 11.115 11.115 0 01.25-3.762zM9.3 16.573A9.026 9.026 0 007 14.935v-3.957l1.818.78a3 3 0 002.364 0l5.508-2.361a11.026 11.026 0 01.25 3.762 1 1 0 01-.89.89 8.968 8.968 0 00-5.35 2.524 1 1 0 01-1.4 0zM6 18a1 1 0 001-1v-2.065a8.935 8.935 0 00-2-.712V17a1 1 0 001 1z"/>
              </svg>
            </div>
            Course Lessons
          </h3>
          <div class="bg-gradient-to-r from-purple-100 to-pink-100 px-4 py-2 rounded-full">
            <span class="text-purple-700 font-semibold text-sm"><%= lessons.length %> lesson<%= lessons.length !== 1 ? 's' : '' %></span>
          </div>
        </div>
        <div class="space-y-6">
          <% lessons.forEach(lesson => { %>
          <div class="bg-gradient-to-r from-gray-50 to-gray-100 rounded-2xl p-6 hover:shadow-lg transition-all duration-200 border border-gray-200">
            <div class="flex items-start justify-between">
              <div class="flex items-start space-x-6 flex-1">
                <div class="w-16 h-16 bg-gradient-to-r from-purple-500 to-pink-500 rounded-2xl flex items-center justify-center flex-shrink-0">
                  <span class="text-white font-bold text-lg">Ep<%= lesson.lesson_no %></span>
                </div>
                <div class="flex-1">
                  <h4 class="font-bold text-gray-800 text-lg mb-2"><%= lesson.title %></h4>
                  <% if (lesson.description) { %>
                  <p class="text-gray-600 leading-relaxed mb-3"><%= lesson.description %></p>
                  <% } %>
                  <div class="flex items-center space-x-4 text-sm text-gray-500">
                    <% if (lesson.duration_mins) { %>
                    <div class="flex items-center space-x-1">
                      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
                      </svg>
                      <span><%= lesson.duration_mins %> min</span>
                    </div>
                    <% } %>
                    <div class="flex items-center space-x-1">
                      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
                        <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                      </svg>
                      <span>Lesson <%= lesson.lesson_no %></span>
                    </div>
                  </div>
                </div>
              </div>
              <div class="flex flex-col items-end space-y-3">
                <% if (lesson.video_url) { %>
                <a href="<%= lesson.video_url %>" target="_blank" class="inline-flex items-center bg-purple-600 text-white px-4 py-2 rounded-xl hover:bg-purple-700 transition-colors text-sm font-medium">
                  <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M2 6a2 2 0 012-2h6a2 2 0 012 2v8a2 2 0 01-2 2H4a2 2 0 01-2-2V6zM14.553 7.106A1 1 0 0014 8v4a1 1 0 00.553.894l2 1A1 1 0 0018 13V7a1 1 0 00-1.447-.894l-2 1z"/>
                  </svg>
                  Watch Video
                </a>
                <% } else { %>
                <span class="inline-flex items-center bg-gray-200 text-gray-600 px-4 py-2 rounded-xl text-sm font-medium">
                  <svg class="w-4 h-4 mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M13.477 14.89A6 6 0 015.11 6.524l8.367 8.368zm1.414-1.414L6.524 5.11a6 6 0 018.367 8.367zM18 10a8 8 0 11-16 0 8 8 0 0116 0z" clip-rule="evenodd"/>
                  </svg>
                  No Video
                </span>
                <% } %>
                <div class="flex space-x-2">
                  <button onclick="editLesson('<%= lesson.id %>')" class="bg-blue-50 text-blue-600 px-3 py-1.5 rounded-lg hover:bg-blue-100 transition-colors text-sm font-medium">
                    Edit
                  </button>
                  <button onclick="deleteLesson('<%= lesson.id %>', '<%= lesson.title %>')" class="bg-red-50 text-red-600 px-3 py-1.5 rounded-lg hover:bg-red-100 transition-colors text-sm font-medium">
                    Delete
                  </button>
                </div>
              </div>
            </div>
          </div>
          <% }); %>
        </div>
      </div>
      <% } else { %>
      <div class="bg-white rounded-2xl p-6 shadow-lg">
        <div class="text-center py-8">
          <svg class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="currentColor" viewBox="0 0 20 20">
            <path fill-rule="evenodd" d="M6 2a1 1 0 00-1 1v1H4a2 2 0 00-2 2v10a2 2 0 002 2h12a2 2 0 002-2V6a2 2 0 00-2-2h-1V3a1 1 0 10-2 0v1H7V3a1 1 0 00-1-1zm0 5a1 1 0 000 2h8a1 1 0 100-2H6z" clip-rule="evenodd"/>
          </svg>
          <h3 class="text-lg font-semibold text-gray-800 mb-2">No Lessons Yet</h3>
          <p class="text-gray-600 mb-4">This course doesn't have any lessons yet.</p>
          <a href="/instructor/courses/<%= course.id %>/edit" class="bg-purple-600 text-white px-6 py-2 rounded-lg hover:bg-purple-700 transition-all">
            Add Lessons
          </a>
        </div>
      </div>
      <% } %>
    </div>

    <!-- Enhanced Sidebar -->
    <div class="space-y-8">
      <!-- Enhanced Course Stats -->
      <div class="bg-white rounded-3xl p-8 shadow-xl border border-gray-100">
        <h3 class="text-2xl font-bold text-gray-800 mb-6 flex items-center">
          <div class="w-8 h-8 bg-gradient-to-r from-green-500 to-emerald-500 rounded-lg flex items-center justify-center mr-3">
            <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
              <path d="M2 11a1 1 0 011-1h2a1 1 0 011 1v5a1 1 0 01-1 1H3a1 1 0 01-1-1v-5zM8 7a1 1 0 011-1h2a1 1 0 011 1v9a1 1 0 01-1 1H9a1 1 0 01-1-1V7zM14 4a1 1 0 011-1h2a1 1 0 011 1v12a1 1 0 01-1 1h-2a1 1 0 01-1-1V4z"/>
            </svg>
          </div>
          Course Statistics
        </h3>
        <div class="space-y-6">
          <div class="bg-gradient-to-r from-blue-50 to-indigo-50 rounded-2xl p-6 border border-blue-100">
            <div class="flex items-center justify-between">
              <div class="flex items-center space-x-3">
                <div class="w-10 h-10 bg-blue-100 rounded-xl flex items-center justify-center">
                  <svg class="w-5 h-5 text-blue-600" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M13 6a3 3 0 11-6 0 3 3 0 016 0zM18 8a2 2 0 11-4 0 2 2 0 014 0zM14 15a4 4 0 00-8 0v3h8v-3z"/>
                  </svg>
                </div>
                <div>
                  <p class="text-gray-600 text-sm">Enrolled Students</p>
                  <p class="text-2xl font-bold text-gray-800"><%= course.enrollment_count || 0 %></p>
                </div>
              </div>
            </div>
          </div>
          
          <div class="bg-gradient-to-r from-purple-50 to-pink-50 rounded-2xl p-6 border border-purple-100">
            <div class="flex items-center justify-between">
              <div class="flex items-center space-x-3">
                <div class="w-10 h-10 bg-purple-100 rounded-xl flex items-center justify-center">
                  <svg class="w-5 h-5 text-purple-600" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M10.394 2.08a1 1 0 00-.788 0l-7 3a1 1 0 000 1.84L5.25 8.051a.999.999 0 01.356-.257l4-1.714a1 1 0 11.788 1.838L7.667 9.088l1.94.831a1 1 0 00.787 0l7-3a1 1 0 000-1.838l-7-3zM3.31 9.397L5 10.12v4.102a8.969 8.969 0 00-1.05-.174 1 1 0 01-.89-.89 11.115 11.115 0 01.25-3.762zM9.3 16.573A9.026 9.026 0 007 14.935v-3.957l1.818.78a3 3 0 002.364 0l5.508-2.361a11.026 11.026 0 01.25 3.762 1 1 0 01-.89.89 8.968 8.968 0 00-5.35 2.524 1 1 0 01-1.4 0zM6 18a1 1 0 001-1v-2.065a8.935 8.935 0 00-2-.712V17a1 1 0 001 1z"/>
                  </svg>
                </div>
                <div>
                  <p class="text-gray-600 text-sm">Total Lessons</p>
                  <p class="text-2xl font-bold text-gray-800"><%= lessons ? lessons.length : 0 %></p>
                </div>
              </div>
            </div>
          </div>
          
          <div class="bg-gradient-to-r from-orange-50 to-yellow-50 rounded-2xl p-6 border border-orange-100">
            <div class="flex items-center justify-between">
              <div class="flex items-center space-x-3">
                <div class="w-10 h-10 bg-orange-100 rounded-xl flex items-center justify-center">
                  <svg class="w-5 h-5 text-orange-600" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm1-12a1 1 0 10-2 0v4a1 1 0 00.293.707l2.828 2.829a1 1 0 101.415-1.415L11 9.586V6z" clip-rule="evenodd"/>
                  </svg>
                </div>
                <div>
                  <p class="text-gray-600 text-sm">Total Duration</p>
                  <p class="text-2xl font-bold text-gray-800">
                    <%= lessons ? lessons.reduce((total, lesson) => total + (lesson.duration_mins || 0), 0) : 0 %> min
                  </p>
                </div>
              </div>
            </div>
          </div>
          
          <div class="bg-gradient-to-r from-green-50 to-emerald-50 rounded-2xl p-6 border border-green-100">
            <div class="flex items-center justify-between">
              <div class="flex items-center space-x-3">
