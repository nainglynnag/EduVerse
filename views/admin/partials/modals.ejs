<!-- Minimal shared modals for admin layout -->
<!-- Profile Modal -->
<div
  id="profileModal"
  class="hidden fixed inset-0 z-50 flex items-center justify-center"
>
  <div class="bg-white rounded-lg shadow-lg w-11/12 md:w-1/3 p-6">
    <h3 class="text-lg font-semibold mb-2">Admin Profile</h3>
    <p class="text-sm text-gray-600">Profile details go here.</p>
    <div class="mt-4 flex justify-end">
      <button
        onclick="closeProfile()"
        class="px-4 py-2 rounded bg-gray-200 hover:bg-gray-300"
      >
        Close
      </button>
    </div>
  </div>
</div>

<!-- Generic Create Modal (used by quick actions) -->
<div
  id="createModal"
  class="hidden fixed inset-0 z-50 flex items-center justify-center"
>
  <div class="bg-white rounded-lg shadow-lg w-11/12 md:w-2/3 p-6">
    <h3 id="createModalTitle" class="text-lg font-semibold mb-2">
      Create Item
    </h3>
    <div id="createModalBody" class="text-sm text-gray-600">
      <!-- dynamic content loaded by child pages -->
    </div>
    <div class="mt-4 flex justify-end">
      <button
        onclick="closeCreateModal()"
        class="px-4 py-2 rounded bg-gray-200 hover:bg-gray-300"
      >
        Cancel
      </button>
      <button
        id="createModalSubmit"
        class="ml-2 px-4 py-2 rounded bg-gradient-to-r from-red-600 to-orange-600 text-white"
      >
        Save
      </button>
    </div>
  </div>
</div>

<script>
  function showCreateModal(title, bodyHtml) {
    const modal = document.getElementById("createModal");
    const titleEl = document.getElementById("createModalTitle");
    const bodyEl = document.getElementById("createModalBody");
    if (modal) {
      titleEl.innerText = title || "Create Item";
      bodyEl.innerHTML = bodyHtml || "";
      modal.classList.remove("hidden");
      document.body.style.overflow = "hidden";
    }
  }
  function closeCreateModal() {
    const modal = document.getElementById("createModal");
    if (modal) {
      modal.classList.add("hidden");
      document.body.style.overflow = "auto";
    }
  }
</script>
