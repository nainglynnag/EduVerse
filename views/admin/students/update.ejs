<!-- Update user form -->
<div class="p-6 bg-white rounded-lg">
  <h3 class="text-xl font-bold mb-4">Update User</h3>
  <form action="/admin/users/<%= user.id %>?_method=PUT" method="POST">
    <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
      <div>
        <label class="block text-sm mb-1">Full Name</label>
        <input
          name="name"
          value="<%= user.name %>"
          required
          class="w-full border rounded px-3 py-2"
        />
      </div>
      <div>
        <label class="block text-sm mb-1">Email</label>
        <input
          name="email"
          type="email"
          value="<%= user.email %>"
          required
          class="w-full border rounded px-3 py-2"
        />
      </div>
      <div>
        <label class="block text-sm mb-1">Role ID</label>
        <input
          name="role_id"
          type="number"
          value="<%= user.role_id %>"
          class="w-full border rounded px-3 py-2"
        />
      </div>
    </div>
    <div class="mt-4">
      <button type="submit" class="px-4 py-2 bg-yellow-600 text-white rounded">
        Update
      </button>
    </div>
  </form>
</div>
