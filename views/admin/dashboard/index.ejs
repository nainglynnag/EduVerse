<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
  // Bar Chart for Popular Courses
  const ctx = document.getElementById("courseChart");

  const data = {
    labels: <%- JSON.stringify(courseNames) %>,
    datasets: [{
      label: "Enrollments",
      data: <%- JSON.stringify(enrollments) %>,
      backgroundColor: "rgba(37, 99, 235, 0.8)",
      borderColor: "rgba(54, 162, 235, 1)",
      borderWidth: 1,
      borderRadius: 10
    }]
  };

  new Chart(ctx, {
    type: "bar",
    data: data,
    options: {
      responsive: true,
      plugins: {
        legend: { display: false },
        tooltip: { enabled: true }
      },
      scales: {
        y: { beginAtZero: true, title: { display: true, text: "Students", font: { size: 14, weight: "bold" } } },
        x: { title: { display: true, text: "Courses", font: { size: 14, weight: "bold" } } }
      }
    }
  });

  // Line Chart for Total Revenue by month
   const revenueData = <%- JSON.stringify(revenue_data) %>;

   const labelsForRevenueChart = revenueData.map(item => `${item.month_name}`);
    const totalRevenue = revenueData.map(item => item.total_revenue);

    const ctx2 = document.getElementById('revenueChart').getContext('2d');
    new Chart(ctx2, {
      type: 'line',
      data: {
        labels: labelsForRevenueChart,
        datasets: [{
          label: 'Revenue (USD)',
          data: totalRevenue,
          borderColor: 'rgba(75, 192, 192, 1)',
          backgroundColor: 'rgba(75, 192, 192, 0.2)',
          fill: true,
          tension: 0.3, // curve smoothing
          pointRadius: 5,
          pointHoverRadius: 7
        }]
      },
      options: {
        responsive: true,
        plugins: {
          legend: {
            display: true,
            position: 'top'
          },
          tooltip: {
            callbacks: {
              label: function(context) {
                return `$${context.raw.toFixed(2)}`;
              }
            }
          }
        },
        scales: {
          y: {
            beginAtZero: true,
            title: {
              display: true,
              text: 'Revenue ($)',
              font: { size: 14, weight: "bold" }
            },

          },
          x: {
            title: {
              display: true,
              text: 'Month',
              font: { size: 14, weight: "bold" }
            }
          }
        }
      }
    });

      // Line Chart for Students Growth by month
   const studentsGrowth = <%- JSON.stringify(students_growth) %>;

   const labelsForStudentsChart = studentsGrowth.map(item => `${item.month_name}`);
    const totalStudents = studentsGrowth.map(item => item.students);

