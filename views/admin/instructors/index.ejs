<!-- Instructors Management Content -->
<div id="instructorsContent">
  <div class="flex items-center justify-between mb-6">
    <h2 class="text-lg md:text-2xl font-bold text-gray-800">
      Instructor Management
      <span class="text-lg text-blue-600">(<%= totalInstructors %>)</span>
    </h2>
    
    <a href="/admin/create-instructor"
      class="bg-gradient-to-r from-red-600 to-orange-600 text-white px-3 md:px-6 py-2 rounded-lg hover:from-red-700 hover:to-orange-700 transition-all flex items-center space-x-2">
      <svg class="w-4 h-4" fill="currentColor" viewBox="0 0 20 20">
        <path fill-rule="evenodd"
          d="M10 3a1 1 0 011 1v5h5a1 1 0 110 2h-5v5a1 1 0 11-2 0v-5H4a1 1 0 110-2h5V4a1 1 0 011-1z"
          clip-rule="evenodd" />
      </svg>
      <span class="text-sm md:text-base">Add New Instructor</span>
    </a>
  </div>

  <!-- Instructor Filters -->
  <div class="bg-white opacity-80 backdrop-blur-lg rounded-lg p-4 mb-4 shadow-sm">
    <div
      class="flex flex-wrap md:gap-4 justify-between items-center"
    >
      <div class="flex text-sm overflow-x-auto">
        
      </div>

      <div class="flex-1"></div>
      <form action="/admin/instructors" method="GET">
        <div class="relative w-full md:w-auto">
        <input
          type="text"
          name="search"
          placeholder="Search instructor..."
          value="<%= search %>"
          class="pl-10 pr-4 py-1.5 md:py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-red-500 focus:border-transparent placeholder-text-sm md:placeholder-text-base"
        />
        <svg
          class="w-4 h-4 text-gray-400 absolute left-3 top-3"
          fill="none"
          stroke="currentColor"
          viewBox="0 0 24 24"
        >
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="2"
            d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"
          />
        </svg>
      </div>
      <button type="submit" class="hidden"></button>
      </form>
    </div>
  </div>


  <!-- Instructors Grid -->
   <% if (instructors && instructors.length > 0) { %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6" id="instructorsGrid">
    <% instructors.forEach(instructor=> { %>
      <div class="bg-white rounded-2xl shadow-lg hover:shadow-xl transition-shadow overflow-hidden">
        <div class="p-6">
          <div class="flex items-center space-x-4 mb-4">
            <div
              class="w-16 h-16 bg-gradient-to-r from-purple-500 to-pink-500 rounded-full flex items-center justify-center">
              <span class="text-xl font-bold text-white">
                <%= instructor.name .split(" ") .map((n) => n[0]) .join("")
              %></span
            >
          </div>
          <div>
            <h3 class=" font-bold text-gray-800">
                  <%= instructor.name %>
                    </h3>
                    <p class="text-sm text-gray-600">
                      <%= instructor.specialization %>
                    </p>
                    <div class="flex items-center mt-1">
                      <div class="flex text-yellow-400">
                        <% 
                          const currentRate = parseInt(instructor.rating).toFixed(0); 
                          const length = 5;
                        %>

                        <% for (let num = 1; num <= length; num++) { %>
                          <svg
                            xmlns="http://www.w3.org/2000/svg"
                            fill="none"
                            viewBox="0 0 24 24"
                            stroke-width="1.5"
                            stroke="currentColor"
                            class="size-4 stroke-yellow-500 <%= num <= currentRate ? 'fill-yellow-500' : '' %>"
                          >
                            <path
                              stroke-linecap="round"
                              stroke-linejoin="round"
                              d="M11.48 3.499a.562.562 0 0 1 1.04 0l2.125 5.111a.563.563 0 0 0 .475.345l5.518.442c.499.04.701.663.321.988l-4.204 3.602a.563.563 0 0 0-.182.557l1.285 5.385a.562.562 0 0 1-.84.61l-4.725-2.885a.562.562 0 0 0-.586 0L6.982 20.54a.562.562 0 0 1-.84-.61l1.285-5.386a.562.562 0 0 0-.182-.557l-4.204-3.602a.562.562 0 0 1 .321-.988l5.518-.442a.563.563 0 0 0 .475-.345L11.48 3.5Z"
                            />
                          </svg>
                        <% } %>
                        
                        <!-- <%= "â˜…" .repeat( Math.floor(instructor.rating) ) %> -->
                      </div>
                      <span class="ml-1 text-sm text-gray-600">
                        <%= instructor.rating %>
                      </span>
                    </div>
            </div>
          </div>

          <div class="space-y-2 mb-4">
            <div class="flex justify-between text-sm">
              <span class="text-gray-600">Courses</span>
              <span class="font-medium">
                <% if (instructor.courses[0]==null) { %>
                  0
                  <% } else { %>
                    <%= instructor.courses.length %>
                      <% } %>

              </span>
            </div>
            <div class="flex justify-between text-sm">
              <span class="text-gray-600">Students</span>
              <span class="font-medium">
                <%= instructor.total_students.toLocaleString() %>
              </span>
            </div>
            <div class="flex justify-between text-sm">
              <span class="text-gray-600">Status</span>
              <span class="px-2 py-1 text-xs rounded-full <%= instructor.status === "active"
                ? "bg-green-100 text-green-800" : "bg-red-100 text-red-800" %>
                "
                > <%= instructor.status %></span>
            </div>
          </div>

          <div class="flex space-x-2">
            <a href="/admin/instructors/<%= instructor.user_id %>"
              class="flex-1 bg-blue-100 text-blue-600 text-sm text-center px-3 py-2 rounded-lg hover:bg-blue-200 active:scale-90 transition-all duration-300">
              View
            </a>
            <a
            <a href="/admin/edit-instructor/<%= instructor.user_id %>"
              class="flex-1 border border-gray-300 text-gray-700 text-sm text-center px-3 py-2 rounded-lg hover:bg-gray-50 active:scale-90 transition-all duration-300">
              Edit
            </a>

            <a
              class="px-3 py-2 text-red-600 hover:bg-red-50 hover:text-red-400 active:scale-90 duration-300 rounded-lg transition-all btn-delete" data-action="/admin/delete-instructor/<%= instructor.user_id %>"
              data-confirm-message="Are you sure you want to delete instructor <%= instructor.name %>? This action cannot be undone.">
              <div>
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5"
                  stroke="currentColor" class="size-6">
                  <path stroke-linecap="round" stroke-linejoin="round"
                    d="m14.74 9-.346 9m-4.788 0L9.26 9m9.968-3.21c.342.052.682.107 1.022.166m-1.022-.165L18.16 19.673a2.25 2.25 0 0 1-2.244 2.077H8.084a2.25 2.25 0 0 1-2.244-2.077L4.772 5.79m14.456 0a48.108 48.108 0 0 0-3.478-.397m-12 .562c.34-.059.68-.114 1.022-.165m0 0a48.11 48.11 0 0 1 3.478-.397m7.5 0v-.916c0-1.18-.91-2.164-2.09-2.201a51.964 51.964 0 0 0-3.32 0c-1.18.037-2.09 1.022-2.09 2.201v.916m7.5 0a48.667 48.667 0 0 0-7.5 0" />
                </svg>
              </div>
            </a>
          </div>

        </div>
      </div>
      <% }) %>
  </div>

  <!-- Pagination -->
<div class="mt-auto px-4 pt-4">
  <div class="flex flex-col sm:flex-row items-center justify-between gap-4">

    <!-- Items per page -->
    <div class="flex items-center space-x-2">
      <span class="text-sm text-gray-600">Show</span>
      <select
        onchange="location.href='?page=1&limit='+this.value"
        class="px-3 py-1 text-sm border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
      >
        <option value="10" <%= limit == 10 ? 'selected' : '' %>>10</option>
        <option value="25" <%= limit == 25 ? 'selected' : '' %>>25</option>
        <option value="50" <%= limit == 50 ? 'selected' : '' %>>50</option>
        <option value="100" <%= limit == 100 ? 'selected' : '' %>>100</option>
      </select>
      <span class="text-sm text-gray-600">per page</span>
    </div>

    <!-- Pagination Numbers -->
    <div class="flex items-center space-x-2">
      <!-- Prev Button -->
      <button
        onclick="location.href='?page=<%= currentPage - 1 %>&limit=<%= limit %>'"
        class="flex items-center px-4 py-2 text-sm font-medium rounded-xl transition-all duration-200
          <%= currentPage <= 1 ? 'bg-gray-100 text-gray-400 cursor-not-allowed' : 'bg-blue-50 text-blue-600 hover:bg-blue-100' %>"
        <%= currentPage <= 1 ? 'disabled' : '' %>>
        Prev
      </button>

      <!-- Page Numbers -->
      <div class="flex items-center space-x-1">
        <% for (let i = 1; i <= totalPages; i++) { %>
          <button
            onclick="location.href='?page=<%= i %>&limit=<%= limit %>&search=<%= search %>'"
            class="w-10 h-10 text-sm font-medium rounded-xl transition-all duration-200
              <%= currentPage === i ? 'bg-blue-600 text-white shadow-md' : 'bg-gray-50 text-gray-700 hover:bg-blue-50 hover:text-blue-600' %>">
            <%= i %>
          </button>
        <% } %>
      </div>

      <!-- Next Button -->
      <button
        onclick="location.href='?page=<%= currentPage + 1 %>&limit=<%= limit %>'"
        class="flex items-center px-4 py-2 text-sm font-medium rounded-xl transition-all duration-200
          <%= currentPage >= totalPages ? 'bg-gray-100 text-gray-400 cursor-not-allowed' : 'bg-blue-50 text-blue-600 hover:bg-blue-100' %>"
        <%= currentPage >= totalPages ? 'disabled' : '' %>>
        Next
      </button>
      
    </div>

    <!-- Jump to Page -->
    <div class="flex items-center space-x-2">
      <span class="text-sm text-gray-600">Go to</span>
      <input
        type="number"
        min="1"
        max="<%= totalPages %>"
        value="<%= currentPage %>"
        onchange="location.href='?page='+this.value+'&limit=<%= limit %>'"
        class="w-16 px-2 py-1 text-sm text-center border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-transparent"
      />
    </div>

  </div>
</div>
   <% } else { %>
    <div class="col-span-full text-center py-2">
        <div class="bg-white rounded-lg p-6 md:p-12 shadow-xl border border-gray-100">
          <!-- Animated Icon -->
          <div class="relative mb-6 md:mb-8">
            <svg class="w-16 h-16 text-gray-400 mx-auto mb-4" fill="currentColor" viewBox="0 0 20 20">
              <path d="M10 9a3 3 0 100-6 3 3 0 000 6zm-7 9a7 7 0 1114 0H3z" />
            </svg>
            <!-- Floating Elements -->
            <div
              class="absolute -top-1 -right-1 md:-top-2 md:-right-2 w-4 h-4 md:w-6 md:h-6 bg-yellow-400 rounded-full animate-pulse">
            </div>
            <div
              class="absolute -bottom-1 -left-1 md:-bottom-2 md:-left-2 w-3 h-3 md:w-4 md:h-4 bg-pink-400 rounded-full animate-pulse delay-1000">
            </div>
          </div>

          <h3 class="text-xl md:text-2xl font-bold text-gray-800 mb-3">No Instructors Yet</h3>
          <p class="text-gray-600 mb-6 md:mb-8 max-w-md mx-auto leading-relaxed text-sm md:text-base">
            You haven't created any instructors yet. Start hiring your first instructor here.
          </p>

          <a href="/admin/create-instructor"
            class="bg-gradient-to-r from-red-600 to-orange-600 text-white px-6 py-2 rounded-lg hover:from-red-700 hover:to-orange-700 transition-all">
            Create New Instructor
          </a>
        </div>

  </div>
   <% } %>
  
</div>
